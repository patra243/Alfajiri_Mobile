<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="3dp"
    android:background="@color/dfwhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dfwhite"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/takeAttendanceStudent1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Student1"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        android:textColor="@color/aspha"/>

                    <TextView
                        android:id="@+id/takeAttendanceStudent2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Student1"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        android:textColor="@color/aspha"/>

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/presentRadio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Present"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/aspha"
                            android:padding="10dp"/>

                        <RadioButton
                            android:id="@+id/absentRadio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Absent"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/aspha"
                            android:padding="10dp"/>

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>