<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dfwhite"
    tools:context=".StudentAddActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addStdToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Add Student"
        app:titleTextColor="@color/anti"
        android:background="@color/stell"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/txtStdName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Name"
                android:inputType="text"
                android:drawableTint="@color/stell"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/txtStdEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableTint="@color/stell"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/txtStdPhone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Phone"
                android:inputType="number"
                android:drawableTint="@color/stell"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border">

            <Spinner
                android:id="@+id/spn1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="@color/stell"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border">

            <Spinner
                android:id="@+id/spn2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="@color/stell"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border">

            <Spinner
                android:id="@+id/spnUnit"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="@color/stell"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/txtStdPass"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Password"
                android:inputType="number"
                android:drawableTint="@color/stell"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnStdSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textSize="17sp"
            android:textColor="@color/anti"
            android:background="@drawable/border"/>

    </LinearLayout>

</LinearLayout>