<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dfwhite"
    tools:context=".FacultyAddActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Add Lecturer"
        app:titleTextColor="@color/anti"
        android:background="@color/stell"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtLName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Name"
                android:inputType="text"
                android:drawableTint="@color/stell"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtLEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableTint="@color/stell"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtLAddress"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Address"
                android:inputType="textEmailAddress"
                android:drawableTint="@color/stell"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtLPhone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Phone"
                android:inputType="number"
                android:drawableTint="@color/stell"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border">

            <Spinner
                android:id="@+id/spnDes"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="@color/stell"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtLID"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableTint="@color/stell"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnLSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textSize="17sp"
            android:textColor="@color/anti"
            android:background="@drawable/border"/>

    </LinearLayout>

</LinearLayout>